{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "types": ["node"],
        "jsx": "react-jsx",
        "paths": {
            "@/*": ["./src/"],
            "@features/*": ["src/front-end/features/*"],
            "@frontend/*": ["src/front-end/*"],
        }
    }
}
